# Camera Configuration
CAMERA_ID=camera_01
RTSP_CAMERA_URL=rtsp://username:password@camera_ip:port/stream

# Motion Detection Parameters
MOTION_THRESHOLD=500
MIN_CONTOUR_AREA=100
BLUR_SIZE=21
INTERVAL_SECONDS=5
COMPRESS_IMAGE_QUALITY=80

# Debug Configuration
DEBUG_LEVEL=INFO

# Logging Configuration
ENABLE_FILE_LOGGING=true
LOG_DIRECTORY=/app/logs
LOG_RETENTION_DAYS=3

# Kafka Configuration
# Update these values according to your Kafka cluster configuration

# Kafka broker addresses (comma-separated if multiple)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# SASL Authentication
KAFKA_SASL_USERNAME=your_kafka_username
KAFKA_SASL_PASSWORD=your_kafka_password
KAFKA_SASL_MECHANISM=SCRAM-SHA-256

# Security Protocol (PLAINTEXT, SSL, SASL_PLAINTEXT, SASL_SSL)
KAFKA_SECURITY_PROTOCOL=SASL_SSL

# SSL Certificate location (if using SSL)
KAFKA_SSL_CA_LOCATION=./certs/ca.crt

# Kafka Topic
CAMERA_STREAM_TOPIC=camera-stream

# Kafka Buffer Error Monitoring (NEW)
# Time threshold in seconds before forcing container restart due to buffer errors
# Default: 60 seconds (1 minute)
KAFKA_BUFFER_ERROR_THRESHOLD_SECONDS=60