# Kafka Configuration
# Update these values according to your Kafka cluster configuration

# Kafka broker addresses (comma-separated if multiple)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# SASL Authentication
KAFKA_SASL_USERNAME=your_kafka_username
KAFKA_SASL_PASSWORD=your_kafka_password
KAFKA_SASL_MECHANISM=PLAIN

# Security Protocol (PLAINTEXT, SSL, SASL_PLAINTEXT, SASL_SSL)
KAFKA_SECURITY_PROTOCOL=SASL_SSL

# SSL Certificate location (if using SSL)
KAFKA_SSL_CA_LOCATION=./certs/ca.crt

# Topic Configuration (optional, for application-specific settings)
KAFKA_TOPIC_NAME=camera-motion-events
KAFKA_TOPIC_PARTITIONS=3
KAFKA_TOPIC_REPLICATION_FACTOR=1

# Application Configuration
LOG_LEVEL=INFO
DEBUG=false
