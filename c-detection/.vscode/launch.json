{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Main Application",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/main.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/src"
      },
      "justMyCode": false,
      "stopOnEntry": false,
      "args": []
    },
    {
      "name": "Debug Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/src"
      },
      "justMyCode": false,
      "stopOnEntry": false,
      "args": []
    }
  ]
}
